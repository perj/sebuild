COMPONENT([
	goarch
	go/src/gopath
	gomodules/loader
	gomodules/module
	collect_special
	srcdir
	c
])

FOO(test
	foos::pbuild,cfoo,cbar,cbaz[foo.foo test.foo zlib.foo]
	srcopts[foo.foo:bar]
	specialsrcs[
		persist_cc:/dev/null:test.foo
		test_zlib_config:/dev/null:zlib.foo
	]
)

FOO(enabled
	enabled:regress[]
	enabled:otherflavor[]
	foos[foo.foo]
)

FOO(disabled
	enabled:badflavor[]
	foos[foo.foo]
)

INSTALL(/regress
	conf[touchtest]
	specialsrcs[
		touch_plus5:$buildpath/stamp:touchtest
	]
)

INSTALL(/regress/infile
	conf[infile]
	srcs[infile.in]
)

INSTALL(/regress/multitgt
	conf[a b c]
	specialsrcs[
		check_order::a,b,c
	]
)

GOPROG(test-remote
	gopkg[github.com/schibsted/sebuild/cmd/seb]
)
